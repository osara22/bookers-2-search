<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class="image-width">
          <%= link_to user_path(user.id) do %>
            <%= attachment_image_tag user, :profile_image, format: 'jpg', size: "40x40", fallback: "ikko.jpg" %>
          <% end %>
        </td>
        <td>
          <%= user.name %>
        </td>
        <td>
          <%= link_to 'Show' ,user_path(user.id) %>
        </td>
      </tr>
     <% end %>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td class="image-width">
          <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, format: 'jpg', size: "40x40", fallback: "ikko.jpg" %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
     <% end %>
  </tbody>
</table>